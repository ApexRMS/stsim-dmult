<?xml version="1.0" encoding="utf-8" ?>
<configuration>
  <package name="stsim-dmult" displayName="Generates dynamic multipliers in ST-Sim" version="3.2.1" isAddOn="True" extendsPackage="stsim" configVersion="2.0000" url="https://github.com/ApexRMS/stsim-dmult">
    <transformers>
      <transformer name="primary" displayName="Dynamic Multipliers" isPrimary="True" className="SyncroSim.STSimDynMult.DynMultTransformer" classAssembly="SyncroSim.STSimDynMult" extendsTransformer="stsim__runtime">
        <datafeeds>
          <datafeed name="options" displayName="DHS Multipliers" dataScope="Scenario">
            <datasheets>
              <datasheet name="DM_DHSMultipliers" displayName="DHS Multipliers" isSingleRow="True">
                <columns>
                  <column name="DHSMultipliersID" dataType="Integer" isPrimary="True"/>
                  <column name="ScenarioID" dataType="Integer"/>
                  <column name="Enabled" dataType="Boolean"/>
                  <column name="Frequency" dataType="Integer" validationType="WholeNumber" format="d"/>
                  <column name="StateAttributeTypeID" dataType="Integer" displayName="State Attribute Type" validationType="Datasheet" formula1="stsim__StateAttributeType"/>
                  <column name="Script" dataType="String"/>
                </columns>
              </datasheet>
            </datasheets>
          </datafeed>
        </datafeeds>
      </transformer>
    </transformers>
    <views>
      <view name="options-view" target="options" className="SyncroSim.STSimDynMult.OptionsDataFeedView" classAssembly="SyncroSim.STSimDynMult"/>
    </views>
    <layouts>
      <layout name="system_forms__scenario-datafeeds" appendTo="Advanced">
        <item name="options"/>
      </layout>
    </layouts>
    <updateProvider
      schemaVersion="100"
      minPackageVersion="3.2.1"
      className="SyncroSim.STSimDynMult.DBUpdate"
      classAssembly="SyncroSim.STSimDynMult"/>
  </package>
</configuration>
